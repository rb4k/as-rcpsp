<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <b>Arbeitszeit pro Woche:</b>
  <%= @user.capacity %>
</p>

<p>
  <b>Zuordnung zum Projekt:</b>
  <%= project = Project.find(@user.project_id)
      project.name%>
</p>

<p>
  <b>Rolle im Projekt:</b>
  <%= resource = Resource.find(@user.resource_id)
      resource.name%>
</p>

<% if current_user?(@user) %>
    <%= button_to 'Einstellung', edit_user_path(current_user), :class => "button", :method => :get %>
<% end %>

