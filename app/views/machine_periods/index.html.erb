<h1>Übersicht der Maschine-Perioden</h1>
<table id="machine_periods" class="display">
  <thead>
  <tr>
    <th>Maschine</th>
    <th>Periode</th>
    <th>Kapazität</th>
    <th>Überstunden</th>
    <th></th>
  </tr>
  </thead>
  <tbody>




  <% @machine_periods.each do |machine_period| %>
      <tr>
        <td><%= machine_period.machine.name %></td>
        <td><%= machine_period.period.name %></td>
        <td><%= machine_period.capacity %></td>
        <td><%= machine_period.overtime %></td>
        <td><%= link_to 'Ändern', edit_machine_period_path(machine_period) %></td>

      </tr>
  <% end %>
  </tbody>
</table>

