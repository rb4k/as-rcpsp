<%= form_for(@product_period) do |f| %>
    <% if @product_period.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product_period.errors.count, "error") %> prohibited this product_period from being
            saved:</h2>

          <ul>
            <% @product_period.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label 'Produkt  ' + @product_period.product.name %>
    </div>

    <div class="field">
      <%= f.label 'Period  ' + @product_period.period.name %>
    </div>

    <div class="field">
      <%= f.label 'Nachfrage' %>
      <%= f.text_field :demand %>
    </div>

    <div class="actions">
      <%= f.submit 'Produkt-Periode anlegen oder aktualisieren' %>
    </div>
<% end %>
