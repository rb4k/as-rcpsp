<h1>Übersicht der Perioden</h1>
<table id="periods" class="display">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>


  <% @periods.each do |period| %>
      <tr>
        <td><%= period.name %></td>
        <td><%= link_to 'Zeigen', period %></td>
        <td><%= link_to 'Ändern', edit_period_path(period) %></td>
        <td><%= link_to 'Löschen', period, method: :delete, data: {confirm: 'Sind Sie sicher?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>

<p>
  <b>Anzahl Perioden:</b>
  <%= @number_of_periods %>
</p>


<%= form_tag change_periods_path %>
    <div class="field">
      <%= label_tag :mynewnumber, "Meine neue Anzahl von Perioden" %>
      <%= text_field_tag :mynewnumber, @mynumber_of_periods  %>
    </div>
<%= submit_tag "Anzahl Perioden anpassen" %>




<br/>


<%= link_to 'Zurück zur Losgrößenplanung', mlclsp_start_path %>

