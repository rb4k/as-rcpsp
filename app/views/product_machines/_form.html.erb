<%= form_for(@product_machine) do |f| %>
    <% if @product_machine.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product_machine.errors.count, "error") %> prohibited this product_machine from being
            saved:</h2>

          <ul>
            <% @product_machine.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="field">
      <%= f.label 'Produkt' %><br />
      <%= f.collection_select :product_id, Product.all, :id, :name %>
    </div>


    <div class="field">
      <%= f.label 'Maschine' %><br />
      <%= f.collection_select :machine_id, Machine.all, :id, :name %>
    </div>

    <div class="actions">
      <%= f.submit 'Produkt-Maschine-Relation anlegen oder aktualisieren' %>
    </div>
<% end %>
