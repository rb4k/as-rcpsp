      <%= f.label 'Zu Vorgang' %><br />
      <%= f.collection_select :sucpro_id, Procedure.all, :id, :name %>
    </div>

    <div class="actions">
      <%= f.submit 'Relation zwischen den Vorgängen anlegen oder aktualisieren' %>
    </div>
<% end %>